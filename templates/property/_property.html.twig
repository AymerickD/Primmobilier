{% cache 'property_' ~ property.id ~ '_' ~ property.updatedAt.timestamp %}
<div class="card mb-4">
    {% if property.picture %}
        {% dump('mdr') %}
        <img src="{{ vich_uploader_asset(property.picture, 'imageFile') | imagine_filter('thumb') }}" alt="" class="card-img-top" style="width: 100%; height: auto">
    {% else %}
        <img src="{{ '/images/empty.jpg' | imagine_filter('thumb') }}" alt="" class="card-img-top" style="width: 100%; height: auto">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.description | nl2br }}</p>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ property.formatedPrice }} €
        </div>
    </div>
</div>
{% endcache %}