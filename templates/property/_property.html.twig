
<div class="card mb-4">
    {% if property.picture %}
        <img src="{{ vich_uploader_asset(property.picture, 'imageFile') }}" alt="" class="card-img-top">
    {% else %}
        <img src="{{ '/images/empty.jpg' }}" alt="" class="card-img-top">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}" class="stretched-link">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.description | slice(0, 300) | nl2br  }}...</p>
        <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ property.formatedPrice }} €
        </div>
    </div>
</div>