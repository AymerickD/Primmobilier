{{ form_start(form) }}
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-4">{{ form_row(form.title, { 'label': 'Titre' }) }}</div>
                    <div class="col-md-4">{{ form_row(form.surface, { 'label': 'Surface' }) }}</div>
                    <div class="col-md-4">{{ form_row(form.price, { 'label': 'Prix' }) }}</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row flex justify-content-start flex-wrap">
                    {% for picture in property.pictures %}
                        <div class="col" style="width: 100px; flex: none; margin: 5px;">
                            <img src="{{ vich_uploader_asset(picture, 'imageFile') }}" width="100" alt="">
                            <a href="{{ path('admin.picture.delete', {id: picture.id}) }} " class="btn btn-danger" data-delete data-token="{{ csrf_token('delete' ~ picture.id) }}">
                                Supprimer
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">{{ form_row(form.rooms, { 'label': 'Pi√®ces' }) }}</div>
            <div class="col-md-2">{{ form_row(form.bedrooms, { 'label': 'Chambres' }) }}</div>
            <div class="col-md-2">{{ form_row(form.heat, { 'label': 'Chauffage' }) }}</div>
            <div class="col-md-2">{{ form_row(form.floor, { 'label': 'Etage' }) }}</div>
        </div>
        <div class="row">
            <div class="col-md-10">{{ form_row(form.picturesFiles) }}</div>
            <div class="col-md-2">{{ form_row(form.sold, { 'label': 'Vendu ?' }) }}</div>
        </div>
        <div class="row">
            <div class="col-md-8">{{ form_row(form.address, { 'label': 'Adresse' }) }}</div>
            <div class="col-md-2">{{ form_row(form.city, { 'label': 'Ville' }) }}</div>
            <div class="col-md-2">{{ form_row(form.postal_code, { 'label': 'Code Postal' }) }}</div>
        </div>
            {{ form_rest(form) }}
            <button class="btn btn-primary">Editer</button>
        {{ form_end(form) }}